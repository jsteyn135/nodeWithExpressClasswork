<div class="form-data">
    <form action="/users/create" method="POST">
        <label for="txtFirstName">first Name</label>
        <input type="text" name="first" id="txtFirstName" autofocus required>

        <label for="txtLastName">last name</label>
        <input type="text" name="last" id="txtLastName" required>

        <label for="txtEmail">Email</label>
        <input type="email" name="email" id="txtEmail" required>
    
        <label for="txtZipCode">zipCode</label>
        <input type="text" name="zipCode" id="txtZipCode" required>
        
        <label for="txtPassword">password</label>
        <input type="password" name="password" id="txtPassword" required>

        <button type="submit">Create</button>
    </form>
</div>



